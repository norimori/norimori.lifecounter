                android:id="@+id/minus5ButtonP1"
                android:text="@string/minus5_buttontext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="20dp"/>

        </TableRow>

        <TableRow android:layout_width="match_parent"

            android:layout_weight="1">
            <TextView
                android:id="@+id/player2Life"
                android:text="@string/player2Life"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="20dp"
                android:padding="15dp" />

            <Button
                android:id="@+id/plus1ButtonP2"
                android:text="@string/plus1_buttontext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="20dp"/>
            <Button
                android:id="@+id/minus1ButtonP2"
                android:text="@string/minus1_buttontext"

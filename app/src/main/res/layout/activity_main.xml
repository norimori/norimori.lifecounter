<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <TableLayout
        android:id="@+id/lifeCounters"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TableRow
            android:layout_width="match_parent"
            android:layout_weight="1">
            <TextView
                android:id="@+id/player1Life"
                android:text="@string/player1Life"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="20dp"
                android:padding="15dp" />

            <Button
                android:id="@+id/plus1ButtonP1"
                android:text="@string/plus1_buttontext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="20dp"/>
            <Button
                android:id="@+id/minus1ButtonP1"
                android:text="@string/minus1_buttontext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="20dp"/>
            <Button
                android:id="@+id/plus5ButtonP1"
                android:text="@string/plus5_buttontext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="20dp"/>
